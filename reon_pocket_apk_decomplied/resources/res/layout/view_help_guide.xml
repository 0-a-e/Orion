<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <jp.co.sony.reonpocket.view.CustomImageView android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/help_guide_image" android:layout_width="256dp" android:layout_height="192dp" android:scaleType="fitCenter"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="32dp" android:paddingEnd="32dp">
        <jp.co.sony.reonpocket.view.CustomFontTextView android:id="@+id/help_guide_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:layout_marginBottom="12dp" style="@style/HelpGuideTitleText"/>
        <jp.co.sony.reonpocket.view.CustomFontTextView android:id="@+id/help_guide_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="192dp" style="@style/HelpGuideDescriptionText"/>
    </LinearLayout>
    <View android:layout_gravity="bottom" android:background="@color/HelpGuideBorder" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
</FrameLayout>
