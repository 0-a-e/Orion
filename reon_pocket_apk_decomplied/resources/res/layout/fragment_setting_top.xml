    <LinearLayout android:orientation="vertical" android:id="@+id/feedback_container" android:background="@color/colorWhite" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/settingSectionTopMargin">
