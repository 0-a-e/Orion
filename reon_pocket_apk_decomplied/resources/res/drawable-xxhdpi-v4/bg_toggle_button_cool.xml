<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <ripple android:color="@color/colorCoolPressed">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorBlack"/>
                    <corners android:radius="@dimen/mainToggleBtnHeight"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/colorTransparent"/>
                    <corners android:radius="@dimen/mainToggleBtnHeight"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item>
        <selector>
            <item android:state_enabled="true" android:state_checked="true" android:drawable="@drawable/img_toggle_cool_off"/>
            <item android:state_enabled="true" android:state_checked="false" android:drawable="@drawable/img_toggle_cool_off"/>
            <item android:state_focused="true" android:drawable="@drawable/img_toggle_cool_off"/>
            <item android:state_enabled="true" android:drawable="@drawable/img_toggle_cool_off"/>
            <item android:state_enabled="false" android:state_checked="false" android:drawable="@drawable/img_toggle_disable"/>
            <item android:state_enabled="false" android:state_checked="true" android:drawable="@drawable/img_toggle_disable"/>
            <item android:state_enabled="true" android:drawable="@drawable/img_toggle_cool_off"/>
        </selector>
    </item>
</layer-list>
