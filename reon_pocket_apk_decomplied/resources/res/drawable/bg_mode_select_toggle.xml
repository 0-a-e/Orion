<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <ripple android:color="#07999999">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorBlack"/>
                    <corners android:radius="@dimen/mainToggleBtnRadius"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/colorTransparent"/>
                    <corners android:radius="@dimen/mainToggleBtnRadius"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item>
        <selector>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorTransparent"/>
                    <corners android:radius="@dimen/mainToggleBtnRadius"/>
                </shape>
            </item>
        </selector>
    </item>
</layer-list>
