<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <selector>
            <item android:state_enabled="true" android:drawable="@drawable/bg_main_view_smart"/>
            <item android:state_enabled="false" android:drawable="@drawable/bg_main_view_smart_unenabled"/>
        </selector>
    </item>
    <item>
        <ripple android:color="@color/colorDefaultPressed">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorBlack"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle"/>
            </item>
        </ripple>
    </item>
</layer-list>
